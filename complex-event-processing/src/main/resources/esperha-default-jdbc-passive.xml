<?xml version="1.0" encoding="UTF-8"?><!-- 	Default EsperHA configuration for Selective State Residence (SSR) mode.		We recommend starting with an empty configuration file and adding those settings found relevant for your project and testing settings as new settings are introduced.	The file "esperha-configuration-8-0.xsd" is the schema file for this XML and may be used to validate this configuration file.	Please refer to the Configuration section of the documentation for more information.--><esperha-configuration xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://www.espertech.com/schema/esperha" xsi:noNamespaceSchemaLocation="esperha-configuration-8-0.xsd">	<!--     Alternatively use the following external schema:   xsi:schemaLocation="http://www.espertech.com/schema/esperha http://www.espertech.com/schema/esper/esperha-configuration-8-0.xsd"> -->	<scheme-profiles>		<scheme-profile>			<scheme-name>resilient-scheme</scheme-name>			<resilient-profile>				<store name="esperha-default-store"/>			</resilient-profile>		</scheme-profile>	</scheme-profiles>	<store-environments>		<store-env-ssr name="esperha-default-store" target-name="jdbc-one">			<state-management>				<state-management-passive/>			</state-management>			<targets>				<target-jdbc name="jdbc-one">					<database-type name="oracle"/>					<datasourcefactory-connection class-name="org.apache.commons.dbcp2.BasicDataSourceFactory">						<env-property name="username" value="cepuser"/>						<env-property name="password" value="development"/>						<env-property name="driverClassName" value="oracle.jdbc.OracleDriver"/>						<env-property name="url" value="jdbc:oracle:thin:@//localhost:1521/fraudcep"/>	<!-- We recommend setting rewriteBatchedStatements=true for MySQL -->						<env-property name="initialSize" value="1"/>						<env-property name="defaultAutoCommit" value="false"/>					</datasourcefactory-connection>				</target-jdbc>			</targets>		</store-env-ssr>	</store-environments></esperha-configuration>